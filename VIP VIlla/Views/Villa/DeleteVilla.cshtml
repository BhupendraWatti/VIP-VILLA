@model VIP_Villa.Models.Dto.VillaDto
@{
    ViewData["Title"] = "Delete Villa";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-lg border-0 rounded-4 p-4" style="backdrop-filter: blur(5px);">
                <div class="card-body">
                    <h2 class="mb-4 fw-bold text-gradient" style="letter-spacing:1px;">
                        <i class="bi bi-trash"></i> Delete Villa
                    </h2>
                    <form method="post" asp-action="DeleteVilla" asp-route-id="@Model.Id">
                        <input hidden asp-for="Id" />
                        <div class="alert alert-warning mb-4 fw-semibold">
                            Are you sure you want to delete this villa? This action cannot be undone.
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Villa Name</label>
                                <input type="text" class="form-control shadow-sm rounded-3" asp-for="Name" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Rate</label>
                                <input type="text" class="form-control shadow-sm rounded-3" asp-for="Rate" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Occupancy</label>
                                <input type="text" class="form-control shadow-sm rounded-3" asp-for="Occupancy" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Sq. Ft</label>
                                <input type="text" class="form-control shadow-sm rounded-3" asp-for="Sqft" readonly />
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-semibold">Description</label>
                                <textarea rows="3" class="form-control shadow-sm rounded-3" asp-for="Details" readonly></textarea>
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-semibold">Amenities</label>
                                <input type="text" class="form-control shadow-sm rounded-3" asp-for="Amenity" readonly />
                            </div>
                            <div class="col-12 text-center mb-3">
                                <img src="@Model.ImageUrl" alt="Villa Image" class="img-thumbnail shadow-sm" style="max-width:160px; max-height:110px; object-fit:cover; border-radius:16px;">
                            </div>
                        </div>
                        <div class="d-flex justify-content-end mt-4">
                            <a asp-action="IndexVilla" class="btn btn-light rounded-pill px-4 me-2 shadow-sm border" style="font-weight: 500;">Cancel</a>
                            <button type="submit" class="btn btn-danger rounded-pill px-4 shadow-sm fw-semibold">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .text-gradient {
        background: linear-gradient(90deg, #dc3545 70%, #fa5252 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .card {
        box-shadow: 0 4px 24px rgba(0,0,0,0.13), 0 1.5px 3px rgba(0,0,0,0.03);
        border-radius: 1.5rem;
        background: rgba(255,255,255,0.97);
    }

    .form-control:focus {
        border-color: #fa5252;
        box-shadow: 0 0 0 0.2rem rgba(220,53,69,.25);
    }
</style>
